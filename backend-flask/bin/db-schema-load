#! /usr/bin/bash

# we can make prints for our shell scripts coloured so we can see what we're doing

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="db-schema-load"

printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

# we should always be in backend-flask dir to exec the schema_path
schema_path="$(realpath .)/db/schema.sql"

echo $schema_path

NO_DB_CONNECTION_URL=$(sed 's/\/cruddur//g' <<<"$CONNECTION_URL")

if [ "$1" = "prod" ]; then
  echo "Running in production environement"
  URL=$PROD_CONNECTION_URL
else
  echo "Running in development environement"
  URL=$CONNECTION_URL
fi

psql $NO_DB_CONNECTION_URL cruddur < $schema_path
